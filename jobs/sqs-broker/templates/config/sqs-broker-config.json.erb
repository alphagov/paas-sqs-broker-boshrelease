{
  "port": "<%= p('sqs-broker.port') %>",
  "basic_auth_username": "<%= p('sqs-broker.basic_auth_username') %>",
  "basic_auth_password": "<%= p('sqs-broker.basic_auth_password') %>",
  "context_timeout_seconds": <%= p('sqs-broker.context_timeout_seconds') %>,
  "log_level": "<%= p('sqs-broker.log_level') %>",
  "aws_region": "<%= p('sqs-broker.aws_region') %>",
  "catalog": <%= JSON.dump(p('sqs-broker.catalog')) %>,
  "resource_prefix": "<%= p('sqs-broker.resource_prefix') %>",
  "deploy_env": "<%= p('sqs-broker.deploy_environment') %>",
  "additional_user_policy": "<%= p('sqs-broker.additional_user_policy') %>",
  "permissions_boundary": "<%= p('sqs-broker.permissions_boundary') %>",
<% if_p('sqs-broker.tls') do |tls| -%>
  "tls": {
    "certificate": "<%= tls.fetch("certificate").gsub(/\n/, '\\n') %>",
    "private_key": "<%= tls.fetch("private_key").gsub(/\n/, '\\n') %>",
    "ca": "<%= tls.fetch("ca").gsub(/\n/, '\\n') %>"
  },
<% end -%>
  "locket": {
    "address": "<%= p('sqs-broker.locket.api_location') %>",
    "ca_cert_file": "/var/vcap/jobs/sqs-broker/config/locket.ca_cert.crt",
    "client_cert_file": "/var/vcap/jobs/sqs-broker/config/locket.client_cert.crt",
    "client_key_file": "/var/vcap/jobs/sqs-broker/config/locket.client_key.key"
  }
}
